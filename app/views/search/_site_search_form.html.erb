<script type="text/javascript">
	$(function() {
		SiteSearch.init();
	});
</script>
<% unless @hide_search_bar %>
	<% if current_user && current_user.confirmed? %>
		<div id="menu-bar-search-form">
			<span id="search-icon"></span>
			<div class="search-input">
				<%= text_field_tag "search_string", nil,:autocomplete => 'off' %>
				<%= hidden_field_tag "user_id_result" %>
			</div>
			<div id="site-search" class="drop-box">
			</div>
		</div>
	<% end %>
<% end %>
