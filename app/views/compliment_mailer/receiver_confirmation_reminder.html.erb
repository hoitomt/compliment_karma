<%= content_for :greeting do %>
	<% if @existing_contact %>
			Congratulations <%= @receiver.first_name %> - 
			You have received your first compliment from 
			<strong><%= @sender.first_last %></strong>!
	<% else %>
			Congratulations <%= @receiver.first_name %>!
	<% end %>
<% end %>

<%= content_for :buttons do %>
	<%= link_to new_account_confirmation_url(:confirm_id => @receiver.new_account_confirmation_token) do %>
		<%= image_tag 'https://s3.amazonaws.com/compliment_karma_prod/buttons/confirm_email.png',
				:alt => "Confirm Email",
				:height => '30' %>
	<% end %>
<% end %>

<%= content_for :bottom_content do %>
	<%= render 'compliment_mailer/partials/bottom_content' %>
<% end %>