<%= content_for :greeting do %>
	<% if @confirmed_relationship %>
		Congratulations <%= @receiver.first_name %> - 
		You have received your first compliment from 
		<strong><%= @sender.first_last %></strong>!
	<% else %>
		Congratulations <%= @receiver.first_name %>!
	<% end %>
<% end %>

<%= content_for :buttons do %>
	<% if @confirmed_relationship %>
		<span>
			<%= render 'compliment_mailer/buttons/accept_button', :relationship => @reationship %>
		</span>
		<span style="margin-left: 40px;">
			<%= render 'compliment_mailer/buttons/decline_button', :relationship => @reationship %>
		</span>
	<% else %>
		<%= render :partial => 'compliment_mailer/buttons/view_details_button',
							 :locals => {:recognition_type_id => RecognitionType.COMPLIMENT.id,
													 :recognition_id => @compliment.id} %>
	<% end %>
<% end %>


