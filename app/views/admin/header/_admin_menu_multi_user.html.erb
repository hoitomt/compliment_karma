<script>
	$(function() {
		Admin.init();
	});
</script>
<div id="admin-menu" class="drop-box">
	<div class="am-help-link">
		<%= link_to 'Help', '#' %>
	</div>
	<div class="clearfix"></div>
	<div class="am-current-user">
		<div class="am-user-image">
			<%= image_tag(current_user.photo.url(:mini)) %>
		</div>
		<div class="am-user-info">
			<span class="am-name"><%= current_user.first_last %></span><br />
			<span class="am-email"><%= current_user.email %></span>
		</div>
		<div class="clear"></div>
		<div class="am-current-user-links">
			<%= link_to "Account", '#' %> - <%= link_to "Privacy Settings", '#' %>
		</div>
	</div>
	<div class="am-profile-list">
		<div class="am-profile-title">Use ComplimentKarma as:</div>
		<ul>
			<li>
				<%= link_to '#' do %>
					<div class="am-user-profile">
						<div class="am-user-profile-image">
							<%= image_tag(current_user.photo.url(:mini)) %>
						</div>
						<div class="am-user-profile-info">
							<%= current_user.first_last %>
						</div>
						<div class="clear"></div>
					</div>
				<% end %>
			</li>
		</ul>
		<div class="clear"></div>
	</div>
	<div class="am-button-container">
		<div class="left-button">
			<%= link_to 'Add Account', '#', :class => "button" %>
		</div>
		<div class="right-button">
			<%= link_to 'Log Out', '#', :class => "button" %>
		</div>
		<div class="clear"></div>
	</div>
</div>