<script>
	$(function() {
		Admin.init();
	});
</script>
<div id="admin-menu" class="drop-box">
	<div class="am-help-link">
		<%= link_to 'Help', '#' %>
	</div>
	<div class="clearfix"></div>
	<div class="am-current-user">
		<ul>
			<li>
				<%= link_to current_user, :class => 'company_profile' do %>
					<div class="am-user-image">
						<%= image_tag(current_user.photo.url(:mini)) %>
					</div>
					<div class="am-user-info">
						<span class="am-name"><%= current_user.first_last %></span><br />
						<span class="am-email"><%= current_user.email %></span>
					</div>
					<div class="clear"></div>
				<% end %>
				<div class="am-current-user-links">
					<%= link_to "Settings", '#' %>
				</div>
				<div class="clear"></div>
			</li>
		</ul>
		<div class="clear"></div>
	</div>
	<% if customer_admin_user? %>
		<div class="am-profile-list">
			<div class="am-profile-title">Manage Company Profile</div>
			<ul>
				<% current_user.companies.each do |company| %>
					<% c_user = company.user %>
					<%= link_to c_user, :class => 'company_profile' do %>
						<li>
							<div class="am-user-profile-image">
								<%= image_tag(c_user.photo.url(:mini)) %>
							</div>
							<div class="am-user-profile-info">
								<%= company.name %>
							</div>
							<div class="clear"></div>
						</li>
					<% end %>
				<% end %>
			</ul>
			<div class="clear"></div>
		</div>
	<% end %>
	<div class="am-button-container">
		<%= link_to 'Log Out', logout_path, :class => "button" %>
		<div class="clear"></div>
	</div>
</div>