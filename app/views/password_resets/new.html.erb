<div class="grid_16">
	<div style="width: 570px; margin: 10px auto 0 auto;">
		<div class="box" style="padding: 0 20px 20px 20px;">
			<div id="explanation">
				<%= render 'shared/flash', :flash => flash %>
			</div>

			<%= form_tag(password_resets_path, :id => "login-form") do %>
				<fieldset style="padding-top:20px; margin-top:20px;">
					<ol>
						<li>
					    <%= label_tag :email %>
					    <%= text_field_tag :email %>
						</li>
					</ol>
				</fieldset>
				<fieldset>
					<div class="center-button" style="width: 200px">
						<button type=submit class="log-in" style="width: 200px" >Reset Password</button>
					</div>
				</fieldset>
			<% end %>
		</div>
	</div>
</div>