var fbView = '<%=j render :partial => "social/facebook_link", 
													:locals => { :recognition_type_id => 1,
																			 :recognition_id => 190,
																		   :show_count => false }  %>'
// console.log(fbView);
var $container = $('#hidden-facebook');
$container.html(fbView);

(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));

var form = $('#hidden-facebook').contents().find("iframe");
// console.log("Form");
// console.log(form);
$(form).submit();