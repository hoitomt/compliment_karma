<script type="text/javascript">
	$(function() {
		FormHelpers.init();
	});
</script>
<div id="send-compliment-popup">
	<%= form_for(@compliment, :validate => true, :html => {:id => 'send-compliment-form'}) do |f| %>
		<%= hidden_field_tag 'request_page', "user" %>
		<div id="data-entry" class="clearfix">
			<div id="label"><%= f.label :receiver_email, "To" %></div>
			<div id="field">
				<%= f.text_field :receiver_email, 
												 :value => @recipient_email,
												 :placeholder => "receiver's email address",	
												 :id => "pop_compliment_receiver" %>
			</div>
		</div>

		<div id="data-entry" class="clearfix">
			<div id="label"><%= f.label :skill, "Skill" %></div>
			<div id="field">
				<%= f.text_field :skill_id, 
												 :placeholder => "start typing for a list",
												 :id => "pop_compliment_skill_id" %>
			</div>
			<%= render 'search/skill_auto_complete_results_pop' %>
		</div>

		<div id="data-entry" class="clearfix" style="margin-bottom: 0px;">
			<div id="label"><%= f.label :comment, "Comment" %></div>
			<div id="field">
				<%= f.text_area :comment, :rows => 2, :id => "pop_compliment_comment" %>
			</div>
		</div>
		<div>
		<div id="data-entry" class="clearfix" style="margin-bottom: 0px;">
			<div id="label"><%= f.label :compliment_type, "Type" %></div>
			<div id="field"><%= f.collection_select :compliment_type_id, ComplimentType.all, :id, :name, 
																							:prompt => "select compliment type" %>
			</div>
		</div>
		<div>
			<button class="button-location" type=submit>Send Compliment</button>
		</div>
	<% end %>
</div>