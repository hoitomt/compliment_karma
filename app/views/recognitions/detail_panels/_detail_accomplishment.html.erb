<div class="left-column">
	<div class="image-function">
		<div class="photo-profile">
			<%= get_user_photo_link_profile(@user) %>
		</div>
		<h3><%= link_to @user.full_name, @user, :class => "black hover-blue" %></h3>
		<%= render :partial => 'recognitions/popup_user_info', 
								 :locals => {:user => @user,
								 						 :professional => true } %>
		<div class="functions clearfix">
			<div class="profile-button" style="margin-right: 10px;">
				<%= compliment_button_medium(@user) %>
			</div>
			<%= render 'follows/follows_button', :user => @user %>
		</div>
	</div>
</div>
<div class="left-column">
	<div class="action accomplishment-action">Earns</div>
</div>
<div class="right-column">
	<div class="image-function detail-view-accomplishment">
		<div style="padding: 60px 0 130px 0; border-bottom:2px solid #E9E9E9">
			<%= image_tag @accomplishment.image_thumb %>
		</div>
		<div>
			<h3><%= @accomplishment.name %></h3>
		</div>
	</div>
</div>
<div class="clear"></div>