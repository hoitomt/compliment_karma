<%= content_for :javascript do %>
	<script type="text/javascript">
		$(function() {
			UserProfile.reinitialize();
			var view = '<%= j(render "recognitions/detail_view") %>';
			var socialPopup = '<%= j(render "recognitions/social_popup_links",
																			{:recognition_id => @recognition_id,
																			 :recognition_type_id => @recognition_type_id,
																			 :iframe => true}) %>';
			var userId = '<%= current_user.try(:id) %>';
			ShowRecognitionFancyBox.init(view, socialPopup, userId);
			UserProfile.showCommentButtonOnClick();
			UserProfile.followButtonHover();
		});
	</script>
<% end %>
