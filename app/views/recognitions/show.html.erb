<%= content_for :javascript do %>
	<script type="text/javascript">
		$(function() {
			UserProfile.reinitialize();
			var view = '<%= j(render "recognitions/detail_view", :recognition => @recognition) %>';
			var socialPopup = '<%= j(render "recognitions/social_popup_links",
																			{:recognition => @recognition,
																			 :iframe => true}) %>';
			var userId = '<%= current_user.try(:id) %>';
			options = {
			  view: view,
			  socialPopup: socialPopup,
			  userId: userId,
			  redirectOnClose: true
			}
			ShowRecognitionFancyBox.init(options);
			UserProfile.showCommentButtonOnClick();
			UserProfile.followButtonHover();
			$('meta[property="og:url"]').attr('content', '<%= @og_meta_url %>');
			$('meta[property="og:image"]').attr('content', '<%= @og_meta_image %>');
			$('meta[property="og:image:url"]').attr('content', '<%= @og_meta_image %>');
			$('meta[property="og:title"]').attr('content', '<%= @og_meta_title %>');
			$('meta[property="og:description"]').attr('content', '<%= @og_meta_description %>');
			$('meta[name="description"]').attr('content', '<%= @meta_description %>');
		});
	</script>
<% end %>
