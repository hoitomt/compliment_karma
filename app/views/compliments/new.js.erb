var updateNewCompliment = function() {
	$('input#compliment_receiver_email').val('<%=j @recipient_email %>');
	$.fn.inputStyle();
	ComplimentUI.flashBlue();
}
var popupOpen = $('.fancybox-skin').is(':visible');
if(popupOpen) {
	$.fancybox.close();
	setTimeout(updateNewCompliment, 750);
} else {
	updateNewCompliment();
}

$("#compliment-form input#compliment_receiver_email").trigger("change");
var settings = window["compliment-form"];
var valid = $('input#compliment_receiver_email').isValid(settings.validators);



