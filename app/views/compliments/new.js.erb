$('input#compliment_receiver_display').focus();
var updateNewCompliment = function() {
	$('input#compliment_receiver_display').val('<%=j @recipient_email %>');
	ComplimentUI.flashBlue();
}
var popupOpen = $('.fancybox-skin').is(':visible');
if(popupOpen) {
	$.fancybox.close();
	setTimeout(updateNewCompliment, 750);
} else {
	updateNewCompliment();
}

