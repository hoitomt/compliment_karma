var id = '<%= @count %>';
var commentsCount = '<%= @comments_count %>';
var updateId = "#comment-count-" + id;
var containerId = '#feed-item-social-' + id;

$(updateId).html("Comment (" + commentsCount + ")");
$.fancybox.close();

$(containerId).show();
$(updateId).effect("highlight", {}, 3000);

<% unless flash[:recognition_comment_errors].blank? %>
	var errors = "<%= flash[:recognition_comment_errors] %>"
	$.jGrowl(errors);
<% end %>
