var errorContainer = '<%=j @error_container %>';
var flashContent = '<%=j render("shared/flash_narrow", :flash => flash ) %>';
if(errorContainer && errorContainer.length > 0) {
	var $container = $('.results');
	CommonScripts.closeNarrowFlash($container);
	$container.prepend(flashContent);
	$('#flash').slideDown();
	$('#close-x').click(function() {
		$('#flash-narrow').slideUp();
	})
} else {
	CommonScripts.showFlash(flashContent);
}
