<% if filter.blank? %>
	<span style="font-weight: bold; margin-left: 15px;">
<% else %>
	<span style="margin-left: 15px;">
<% end %>
<%= link_to "All (#{user_contacts_count})", 
						user_filter_contacts_path(user),
						:class => "ul_hover",
						:remote => true %>
</span>
<% groups.try(:each) do |group| %>
	<% 
		if group.declined? && !Group.find_by_id(filter).try(:declined?)
			next
		end
	%>
	<% if group.id == filter.to_i %>
		<span style="font-weight: bold; margin-left: 15px;">
	<% else %>
		<span style="margin-left: 15px;">
	<% end %>
	<%= link_to user_filter_contacts_path(user, :filter => group.id),
							:class => "ul_hover",
							:remote => true do %>
		<%= group.name %> 
			(<span id="update-group-count-<%= group.id %>"><%= group_counts[group.id] %></span>)
	<% end %>
	</span>
<% end %>
<div class="clear"></div>