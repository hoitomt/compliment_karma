<div id="new-contact-form">
	<div id="new-contact-search-form">
		<div class="new-contact-input">
			<%= text_field_tag "search_string", 
													nil,
													:autocomplete => 'off', 
													:placeholder => "Start typing your new contact's name" %>
			<%= hidden_field_tag "user_id_result" %>
			<%= hidden_field_tag "person-search-source", "new-contact" %>
		</div>
		<div class="clear"></div>
	</div>
	<div class="results">
		<div id="contact-search"></div>
	</div>
	<div class="clear"></div>
</div>