<%= content_for :stylesheets do %>
	<style type="text/css">
		#header, #footer { display: none; }
	</style>
<% end %>
<div class="grid_16">
	<div style="width: 570px; margin: 0 auto 0 auto;">
		<div id="login-logo" style="margin: 100px 0 10px 0;">
			<%= link_to image_tag('ck_logo.png'), root_path %>
		</div>
		<div class="box" style="padding: 0 20px 20px 20px;">
			<div id="explanation">
				<%= render 'shared/flash', :flash => flash %>
			</div>
			<%= form_for(:session, 
									 :url => { :action => :create, :email => @email}, 
									 :html => {:id => 'login-form'}) do |f| %>
				<fieldset style="padding: 20px 0 0 0;">
					<ol>
						<li>
					    <%= f.label :email, "Email" %>
					    <%= f.text_field :email, :value => @email %>
						</li>
						<li>
					    <%= f.label :password %>
					    <%= f.password_field :password %>
						</li>
						<li>
							<div class="checkbox-div"><%= f.check_box :remember_me, :style => "width: 20px; height: 20px; background: none; display: inline-block;" %></div>
							<div class="checkbox-label">Remember Me</div>
						</li>
					</ol>
				</fieldset>
				<fieldset>
					<div class="log-in-button">
						<button type=submit class="log-in">Log In</button>
						<div style="text-align: left;">
							<%= link_to '- Forgot Password?', new_password_reset_path, :class => "login-links" %>
							<br />
							<%= link_to '- Create a Free Account', signup_path, :class => "login-links" %>
						</div>
					</div>
				</fieldset>
			<% end %>	

			<div class="clear"></div>
		</div>
	</div>
</div>