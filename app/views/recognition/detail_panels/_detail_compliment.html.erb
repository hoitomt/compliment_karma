<div class="left-column">
	<div class="image-function">
		<div class="photo-small">
			<%= get_user_photo_link_small(@sender) %>
		</div>
		<h3><%= get_user_full_name(@sender) %></h3>
		<div class="functions clearfix">
			<div class="profile-button" style="margin-right: 10px;">
				<%= compliment_button_medium(@sender) %>
			</div>
			<%= render :partial => 'follows/follows_button', 
								 :locals => { :user => @user, :subject_user => @sender } %>
		</div>
	</div>
</div>
<div class="left-column">
	<% if ComplimentType.is_professional?(@compliment_type_id) %>
		<div class="action professional-compliment-action">Compliments</div>
	<% else %>
		<div class="action personal-compliment-action">Compliments</div>
	<% end %>
</div>
<div class="right-column">
	<div class="image-function">
		<div class="photo-small">
			<%= get_user_photo_link_small(@receiver) %>
		</div>
		<h3><%= get_user_full_name(@receiver) %></h3>
		<div class="functions clearfix">
			<div class="profile-button" style="margin-right: 10px;">
				<%= compliment_button_medium(@receiver) %>
			</div>
			<%= render :partial => 'follows/follows_button', 
								 :locals => {:user => @user, :subject_user => @receiver} %>
		</div>
	</div>
</div>
<div class="clear"></div>
<div class="item-details clearfix">
	<div class="item-details-label"><%= get_user_full_name(@sender) %> says</div>
	<div class="item-details-comment"><%= compliment_text(@compliment_popup) %></div>
	<div class="clear"></div>
	<div class="item-details-label">Skill</div>
	<div class="item-details-comment"><%= compliment_skill(@compliment_popup) %></div>
	<div class="clear"></div>
	<div class="item-details-label">Compliment Type</div>
	<div class="item-details-comment"><%= @compliment_type %></div>
</div>