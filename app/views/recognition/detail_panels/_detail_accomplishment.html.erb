<div class="left-column">
	<div class="image-function">
		<div class="photo-profile">
			<%= get_user_photo_link_profile(@user) %>
		</div>
		<h3><%= @user.full_name %></h3>
		<%= render :partial => 'recognition/popup_user_info', 
								 :locals => {:user => @user,
								 						 :professional => true } %>
		<div class="functions clearfix">
			<div class="profile-button" style="margin-right: 10px;">
				<%= compliment_button_medium(@user) %>
			</div>
			<%= render 'follows/follows_button', :user => @user %>
		</div>
	</div>
</div>
<div class="left-column">
	<div class="action accomplishment-action">Earns</div>
</div>
<div class="right-column">
	<div class="image-function">
		<%= image_tag @accomplishment.image_thumb %>
		<div class="functions">
			<h3><%= @accomplishment.name %></h3>
		</div>
	</div>
</div>
<div class="clear"></div>