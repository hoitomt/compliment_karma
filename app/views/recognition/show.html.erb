<%= content_for :javascript do %>
	<script type="text/javascript">
		$(function() {
			UserProfile.reinitialize();
			var view = '<%= j(render "recognition/detail_view") %>';
			var socialPopup = '<%= j(render "recognition/social_popup_links",
																			{:recognition_id => @recognition_id,
																			 :recognition_type_id => @recognition_type_id,
																			 :iframe => true}) %>';
			ShowRecognitionFancyBox.init(view, socialPopup);
		});
	</script>
<% end %>