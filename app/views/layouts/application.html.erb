<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <title>Compliment Karma Application | <%= @title %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
	<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" type="text/javascript">
	</script> 
	
  <%= csrf_meta_tags %>
	<%= yield :stylesheets %>
	<%= yield :javascript %>
	<!--[if gte IE 9]>
	  <style type="text/css">
	    .gradient {
	       filter: none;
	    }
	  </style>
	<![endif]-->
	<script type="text/javascript">
		$(function() {
			var flashContent = '<%=j render("shared/flash", :flash => flash ) %>';
			CommonScripts.showFlash(flashContent);
			FooterResize.init();
			
			$('.fancybox').fancybox({
				maxWidth: 800
			});
			SiteSearch.init();
		});
	</script>
	<% if Rails.env.production? %>
		<%= render 'layouts/google_analytics' %>
	<% end %>
</head>
<body>
	<%#= render 'social/facebook_javascript' %>
	<%= render 'social/twitter_javascript' %>
	<div id="flash-container">
		<div id="explanation">
			<%= render 'shared/flash', :flash => flash %>
		</div>
	</div>
	<% if company_user? %>
		<%= render 'layouts/admin_header' %>
	<% else %>
		<%= render 'layouts/header' %>
	<% end %>
	<%= yield :home_page %>
	<div id="main-container" class="container_16">
		<%= yield %>
		<div class="clear"></div>
	</div>
	<%= yield :no_container %>
	<div class="clear"></div>
	<div id="expansion-div" class="container_16 clearfix"></div>
	<%= render 'layouts/footer' %>
</body>
</html>
